{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./lib/*"]
    },

    // Needed for lib:build (svelte plugin)
    "preserveValueImports": false,
    "verbatimModuleSyntax": false,
  },
  "include": ["./src/**/*","./lib/**/*"]
}
