    "@types/node": "^20.11.21",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "esbuild-plugin-vue3": "^0.4.2",
    "esbuild-svelte": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-svelte": "^7.1.6",
