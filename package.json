    "@astrojs/vue": "^4.0.8",
    "@types/react": "^18.2.60",
    "@types/react-dom": "^18.2.19",
    "astro": "^4.4.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.341.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "svelte": "^4.2.12",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
